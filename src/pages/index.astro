        { text: 'Home', href: '#' },
        { text: 'About', href: '#about' },
        { text: 'Resume', href: '#resume' },
        { text: 'Tech', href: '#tech' },
        { text: 'Portfolio', href: '#portfolio' },
      ]}
      actions={[
        {
          text: "Let's Talk",
          href: 'https://cal.com/juanso',
        },
        {
          text: 'Download CV',
          href: '/public/cv/Juan_José_Peralta_-_-3.pdf',
          download: 'download',
