  <!-- Content Widget **************** -->

  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://www.linkedin.com/in/juanjose-peralta/',
        },
      },
      {
        icon: 'tabler:brand-whatsapp',
        callToAction: {
          target: '_blank',
          text: 'WhatsApp',
          href: 'https://wa.me/+542215589354',
        },
      },
      {
        icon: 'tabler:brand-telegram',
        callToAction: {
          target: '_blank',
          text: 'Telegram',
          href: 'https://t.me/+542215589354',
        },
      },
    ]}
    image={{
      src: '/images/juanso-cv-photo-1.jpg',
      alt: 'Colorful Image',
    }}
