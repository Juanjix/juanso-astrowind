  <!-- Hero2 Widget ******************* -->

  <Hero
    id="hero"
    title="Juan José Peralta"
    tagline="Frontend Engineer"
    actions={[{ variant: 'primary', target: '_blank', text: 'Hire me', href: 'https://cal.com/juanso' }]}
