  <div
    class="grid grid-cols-2 gap-20 justify-center px-8 lg:flex lg:flex-row lg:justify-around lg:gap-0 mb-20 lg:mb-40"
  >
    <div class="flex justify-center">
      <Fragment set:html={Vercel} />
    </div>
    <div class="flex justify-center">
      <Image src={Gatsby} alt="" height={90} />
    </div>
    <div class="flex justify-center">
      <Fragment set:html={AstroLogo} />
    </div>
    <div class="flex justify-center">
      <Image src={React} alt="" width={90} />
    </div>
    <div class="flex justify-center">
      <Image src={Contentful} alt="" width={90} />
    </div>
    <div class="flex justify-center">
      <Image src={Figma} alt="" width={90} />
